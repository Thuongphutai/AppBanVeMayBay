<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/border_login">
        <TextView
            android:text="Đăng Ký"
            android:textSize="32dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_margin="20dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="Tài khoản"
            android:textColor="#489F1F"
            android:layout_margin="20dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/edtEmail"
            android:hint="example@gmail.com"
            android:layout_marginHorizontal="20dp"
            android:backgroundTint="@color/white"
            android:background="@drawable/border"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="Mật khẩu"
            android:textColor="#489F1F"
            android:layout_margin="20dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/edtPassword1"
            android:layout_marginHorizontal="20dp"
            android:backgroundTint="@color/white"
            android:background="@drawable/border"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="Xác nhận mật khẩu"
            android:textColor="#489F1F"
            android:layout_margin="20dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/edtPassword2"
            android:layout_marginHorizontal="20dp"
            android:backgroundTint="@color/white"
            android:background="@drawable/border"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="Số điện thoại"
            android:textColor="#489F1F"
            android:layout_margin="20dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/edtSDT"
            android:layout_marginHorizontal="20dp"
            android:backgroundTint="@color/white"
            android:background="@drawable/border"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Ngày sinh"
                android:textColor="#489F1F"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="20dp"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginLeft="90dp"
                android:text="Số điện thoại"
                android:textColor="#489F1F"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edtNgaySinh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@drawable/border"
                android:backgroundTint="@color/white"
                android:hint="dd/mm/yyyy"
                android:paddingRight="80dp"
                android:textColor="#489F1F"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/edtGioiTinh"
                android:background="@drawable/border"
                android:backgroundTint="@color/white"
                android:layout_marginRight="20dp"
                android:hint="sex"
                android:textColor="#489F1F"
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <Button
            android:padding="10dp"
            android:textAlignment="center"
            android:id="@+id/btnRegister"
            android:text="Đăng ký"
            android:backgroundTint="#489F1F"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:background="@drawable/border"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_gravity="center"
            android:textStyle="italic"
            android:layout_margin="20dp"
            android:textSize="16dp"
            android:autoLink="all"
            android:textColor="@color/xanhbienvui"
            android:id="@+id/tvYesAccount"
            android:text="Bạn đã có tài khoản ? Đăng nhập ngay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>