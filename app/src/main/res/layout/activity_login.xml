<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#CAF0F8"
    tools:context=".LoginActivity">

    <TextView
        android:text="Bắt đầu tìm kiếm và đặt vé chuyến bay ngay bay giờ"
        android:layout_width="match_parent"
        android:textStyle="bold"
        android:textSize="100px"
        android:layout_margin="20dp"
        android:textColor="@color/black"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/border_login">
        <TextView
            android:text="Đăng Nhập"
            android:textSize="32dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_margin="20dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="Tài khoản"
            android:textColor="#489F1F"
            android:layout_margin="20dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/edtEmailLogin"
            android:layout_marginHorizontal="20dp"
            android:backgroundTint="@color/white"
            android:background="@drawable/border"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="Mật khẩu"
            android:textColor="#489F1F"
            android:layout_margin="20dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:inputType="textPassword"
            android:id="@+id/edtPasswordLogin"
            android:layout_marginHorizontal="20dp"
            android:backgroundTint="@color/white"
            android:background="@drawable/border"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvQuenMatKhau"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_margin="20dp"
            android:text="Quên mật khẩu ?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:padding="10dp"
            android:textAlignment="center"
            android:id="@+id/btnLogin"
            android:text="Đăng nhập"
            android:backgroundTint="#489F1F"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:background="@drawable/border"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_gravity="center"
            android:textStyle="italic"
            android:layout_margin="20dp"
            android:textSize="16dp"
            android:autoLink="all"
            android:textColor="@color/xanhbienvui"
            android:id="@+id/tvNotAccount"
            android:text="Bạn chưa có tài khoản ? Đăng ký ngay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>