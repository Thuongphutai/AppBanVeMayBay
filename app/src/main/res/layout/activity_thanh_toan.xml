<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/xanhbiennhat">
        <ImageButton
            android:id="@+id/btnBack_ThanhToan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/xanhbiennhat"
            android:layout_margin="25dp"
            android:src="@drawable/baseline_arrow_back_24" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Thanh Toán"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textAlignment="gravity"
            android:gravity="center"
            android:paddingRight="20dp"/>
    </LinearLayout>
    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="5dp"
        android:textSize="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chi tiết giá"/>
    <LinearLayout android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:layout_marginHorizontal="20dp">
        <LinearLayout
            android:layout_marginVertical="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvDiemDi_ThanhToan"
                android:layout_width="wrap_content"
                android:textSize="15dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:drawableEnd="@drawable/baseline_compare_arrows_24"
                android:text="HAN" />

            <TextView
                android:id="@+id/tvDiemDen_ThanhToan"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="HAN" />
            <TextView
                android:id="@+id/tvTimeStart_ThanhToan"
                android:layout_marginLeft="80dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="6:00-"/>
            <TextView
                android:id="@+id/tvTimeEnd_ThanhToan"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="7:20"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginVertical="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tvIDChoNgoi_ThanhToan"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:text="1 Chỗ ngồi - 10C"/>
            <TextView
                android:id="@+id/tvNguoiLonTreEm_ThanhToan"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="65dp"
                android:text="Người lớn"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginVertical="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tvDichVu_ThanhToan"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:text="Combo 1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tvThuePhi_ThanhToan"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:textSize="11dp"
                android:textStyle="bold"
                android:text="Thuế,phí và các khoảng thu: 1.050.000VND"/>
            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/tvTongTien_ThanhToan"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:textSize="11dp"
                android:textStyle="bold"
                android:text="Tổng giá chuyến đi: 4.750.000VND"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_margin="20dp"
        android:id="@+id/tvChonPTTT_ThanhToan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textStyle="bold"
        android:text="Chọn Phương Thức Thanh Toán"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border">
        <ImageView
            android:layout_width="130dp"
            android:layout_height="64dp"
            android:src="@drawable/napas"/>
        <ImageView
            android:layout_width="130dp"
            android:layout_height="64dp"
            android:src="@drawable/nvpay"/>

        <ImageView
            android:layout_width="130dp"
            android:layout_height="64dp"
            android:src="@drawable/visamobile" />
    </LinearLayout>
    <Button
        android:id="@+id/btnThanhToanNgay_ThanhToan"
        android:layout_margin="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thanh Toán Ngay"
        android:backgroundTint="@color/XanhLa"
        android:gravity="center"/>
    <Button
        android:layout_marginLeft="15dp"
        android:id="@+id/btnThanhToanSau_ThanhToan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/xanhduongdam"
        android:text="Thanh Toán Sau"
        android:gravity="center"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:text="Tên ngân hàng"/>
        <EditText
            android:layout_marginLeft="50dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textAlignment="viewStart"
            android:textSize="15dp"
            android:hint="Chọn ngân hàng"
            android:background="@drawable/border"
            android:drawableEnd="@drawable/baseline_arrow_drop_down_24"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:text="Mã thẻ/SĐT"/>
        <EditText
            android:layout_marginLeft="67dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textAlignment="viewStart"
            android:textSize="15dp"
            android:hint="+84"
            android:background="@drawable/border" />
    </LinearLayout>
    <Button
        android:layout_gravity="center_horizontal"
        android:text="Thanh Toán"
        android:textStyle="bold"
        android:backgroundTint="@color/XanhLa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>