<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="30dp"
    app:cardElevation="5dp"
    app:contentPadding="20dp"
    app:cardUseCompatPadding="true"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvRcvTimeDiemDi"
            android:layout_marginLeft="20dp"
            android:text="Điểm Đi"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/baseline_arrow_right_alt_24"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/tvRcvTimeDiemDen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="Điểm đến"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvRcvDiemDi"
                android:layout_marginLeft="20dp"
                android:text="Time đi"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvRcvDiemDen"
                android:layout_marginLeft="65dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Time đến"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold" />
        </LinearLayout>
        <TextView
            android:id="@+id/tvRcvNgay"
            android:layout_marginLeft="20dp"
            android:textSize="15dp"
            android:text="Ngày"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="Giá"
            android:textStyle="bold|italic"
            android:layout_gravity="end"
            android:id="@+id/tvRcvGia"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:layout_margin="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>


</androidx.cardview.widget.CardView>